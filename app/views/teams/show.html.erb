<p id="notice"><%= notice %></p>

<div>
	<h1><%= @team.name%></h1>
	<p><%= @team.description %></p>
</div>

<h3>Team members:</h3>
<ul>
<% @users.each do |user| %>
	<li><%= image_tag avatar_url(user, 40) %> <%= user.name %></li>
<% end %>
</ul>

<h3>Team activities:</h3>
<ul>
<% @activities.each do |activity| %>
	<li><%= activity.user.name %> done <%= activity.content %></li>
<% end %>
</ul>